{
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "plugins": [
      [
           "module-resolver",
           {
             "root": ["./src"],
             "extensions": [".ios.js", ".android.js", ".js", ".ts", ".tsx", ".json"],
             "alias": {
             "tests": ["./tests/"],
               "@components": "./src/components",
             }
           }
         ]
      ]
  }

